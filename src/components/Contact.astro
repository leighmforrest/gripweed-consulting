---
import Section from "./Section.astro";
---

<Section sectionId="contact">
  <div class="grid grid-cols-1 md:grid-cols-2 p-4 gap-4 md:min-h-screen">
    <div class="flex flex-col p-4">
        <h2 class="text-4xl text-vermillion dark:text-dark-vermillion text-center">Get In Touch</h2>
        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Minus molestiae fugiat numquam minima totam asperiores!</p>
    </div>
    <form class="flex flex-col rounded-xl shadow-md border border-gray-400 dark:border-gray-500 p-4">
        <h2 class="text-4xl text-vermillion dark:text-dark-vermillion text-center">Contact Us</h2>
      <div class="flex flex-col">
        <label
          for="message"
          class="block mb-2 text-md font-medium text-gray-900 dark:text-gray-400"
          >Your message</label
        >
        <textarea
          id="message"
          rows="6"
          placeholder="Your message..."
          class="w-full p-3 border border-gray-300 dark:border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-vermillion dark:focus:ring-special-yellow focus:border-transparent text-gray-900 dark:text-gray-100 bg-gray-50 dark:bg-gray-700 resize-none"
        ></textarea>
      </div>
    </form>
  </div>
</Section>
